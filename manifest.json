{
  "name": "MCBE Script Editor",
  "short_name": "MCBE Editor",
  "description": "Editor de scripts para Minecraft Bedrock con soporte offline",
  "start_url": "/",
  "display": "standalone",
  "orientation": "portrait",
  "prefer_related_aplications": false,
  "background_color": "#1e1e1e",
  "theme_color": "#007acc",
  "icons": [
    {
      "src": "/icons/icon-192.png",
      "type": "image/png",
      "sizes": "192x192"
    },
    {
      "src": "/icons/icon-512.png",
      "type": "image/png",
      "sizes": "512x512"
    },
    {
      "src": "/icons/icon-512-maskable.png",
      "type": "image/png",
      "sizes": "512x512",
      "purpose": "maskable"
    }
  ],
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "text/javascript": [".js", ".ts"]
      }
    }
  ],
  "offline_enabled": true
}